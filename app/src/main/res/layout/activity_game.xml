<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
              android:background="#000000"
              tools:context=".GameActivity"
              android:orientation="vertical">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:paddingTop="@dimen/nav_header_vertical_spacing"
            app:srcCompat="@drawable/ledzeppelin1"
            android:contentDescription="@string/nav_header_desc"
            android:id="@+id/ledzeppelin"
            android:layout_marginTop="12dp"/>

    <View android:layout_width="match_parent" android:layout_height="15dp" />

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#FAFAFA"
            android:id="@+id/question"
            android:layout_gravity="center"
            android:background="@drawable/gradientinvers"
    />

    <View android:layout_width="match_parent" android:layout_height="30dp" />

    <Button
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:textSize="26sp"
            android:textColor="#FAFAFA"
            android:id="@+id/optiona"
            android:layout_gravity="center"
            android:background="@drawable/gradientoptions"
    />

    <View android:layout_width="match_parent" android:layout_height="25dp" />

    <Button
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:textSize="26sp"
            android:textColor="#FAFAFA"
            android:id="@+id/optionb"
            android:layout_gravity="center"
            android:background="@drawable/gradientoptions"
    />

    <View android:layout_width="match_parent" android:layout_height="25dp" />

    <Button
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:textSize="26sp"
            android:textColor="#FAFAFA"
            android:id="@+id/optionc"
            android:layout_gravity="center"
            android:background="@drawable/gradientoptions"
    />

    <View
            android:layout_width="match_parent"
            android:layout_height="20dp" />

    <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textSize="26sp"
            android:textColor="#FAFAFA"
            android:id="@+id/score"
            android:layout_gravity="center"
            android:background="@drawable/gradientoptions"
            />

</LinearLayout>